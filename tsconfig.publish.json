{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "./",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["ES5", "ES2020", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./",
        "strict": true,
        "target": "ES5",
        "types": ["node", "jasmine"]
    },
    "exclude": ["node_modules", "test"]
}
