{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["ES5", "ES2020", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "strict": true,
        "target": "ES5",
        "types": ["node", "jasmine"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
