{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "ES6",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "strict": true,
        "target": "ES5",
        "types": ["node", "jasmine"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
